<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_6sdp">


        <ImageView
            android:id="@+id/cb_title"
            android:layout_width="@dimen/_22sdp"
            android:paddingHorizontal="@dimen/_8sdp"
            android:layout_height="@dimen/_22sdp"
            android:background="@drawable/icons_checkbox_unchecked"
            android:text="لا استطيع التواصل مع المندوب"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:textColor="#A3A3A4"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_8sdp"
            android:text="لا استطيع التواصل مع المندوب"
            android:textAlignment="viewStart"
            app:layout_constraintBottom_toBottomOf="@+id/cb_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cb_title"
            app:layout_constraintTop_toTopOf="@+id/cb_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>