<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back_layout">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_logo_user"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:elevation="@dimen/_1sdp"
                app:civ_border_width="@dimen/_1sdp"
                app:civ_border_color="@color/appColor"
                android:layout_margin="@dimen/_16sdp"
                android:src="@drawable/man"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_name_provider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawal_bold"
                android:text="@string/name"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:textAlignment="viewStart"
                android:textColor="@color/appColor"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_logo_user"
                app:layout_constraintTop_toTopOf="@+id/iv_logo_user" />


            <TextView
                android:id="@+id/tv_total_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:fontFamily="@font/tajawal_regular"
                android:text="500 ر.س"
                android:layout_marginTop="@dimen/_4sdp"
                android:paddingHorizontal="@dimen/_8sdp"
                android:paddingVertical="@dimen/_3sdp"
                android:background="@drawable/shape_text7"
                android:textAlignment="viewStart"
                android:textColor="#98B0C3"
                android:backgroundTint="#FFFFFF"
                android:textSize="@dimen/_11ssp"
                android:drawablePadding="@dimen/_4sdp"
                android:drawableStart="@drawable/icons_wallet_home"
                app:layout_constraintStart_toEndOf="@+id/iv_logo_user"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_provider" />


            <TextView
                android:id="@+id/tv_avg_rate"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:drawableStart="@drawable/icons_star"
                android:drawablePadding="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:fontFamily="@font/tajawal_regular"
                android:text="0.0"
                android:backgroundTint="#FFFDF0"
                android:background="@drawable/shape_text7"
                android:paddingHorizontal="@dimen/_8sdp"
                android:textColor="#FFDE17"
                android:gravity="center"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_total_wallet"
                app:layout_constraintStart_toEndOf="@+id/tv_total_wallet"
                app:layout_constraintTop_toTopOf="@+id/tv_total_wallet" />


            <TextView
                android:id="@+id/title_count_job"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawal_regular"
                android:text="@string/previous_works"
                android:textAlignment="center"
                android:textColor="#013E6B"
                android:layout_marginTop="@dimen/_4sdp"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="@+id/tv_total_wallet"
                app:layout_constraintTop_toBottomOf="@+id/tv_total_wallet" />


            <TextView
                android:id="@+id/tv_count_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:fontFamily="@font/tajawal_bold"
                android:text="0"
                android:textAlignment="viewStart"
                android:textColor="@color/appColor"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintBottom_toBottomOf="@+id/title_count_job"
                app:layout_constraintStart_toEndOf="@+id/title_count_job"
                app:layout_constraintTop_toTopOf="@+id/title_count_job" />


            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_5sdp"
                android:background="@drawable/ic_view"
                android:backgroundTint="#8EABC1"
                android:layout_marginTop="@dimen/_24sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_count_job" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/shape_layout"
                android:backgroundTint="#F4F7FF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView11">


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_16sdp"
                    android:fontFamily="@font/tajawal_bold"
                    android:text="@string/latest_requests"
                    android:textColor="@color/appColor"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_new_order"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_8sdp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    tools:itemCount="10"
                    tools:listitem="@layout/item_all_order" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintNoOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/rv_new_order"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView">


                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottieAnimationView"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/loding_order" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/waiting_for_new_orders"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>






        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>